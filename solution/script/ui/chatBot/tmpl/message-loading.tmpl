<li class="bot" id="loading">
	<div {{if domainImage}}class="domainavata" style="background: url({{attachmentpath:domainImage}}) no-repeat 0 0; background-size: cover; background-position: center;" {{else}}class="avata" {{/if}}></div> 
	<div class="name">{{:botName}}</div>
	<div class="bubble">
		<div class="time">{{:time}}</div>
		<div class="dots">
			<div class="dot1"></div>
			<div class="dot2"></div>
			<div class="dot3"></div>
		</div>
	</div>
</li>